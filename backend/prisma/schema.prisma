generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  STUDENT
}

model Department {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  code      String   @unique
  courses   Course[]
  faculty   Faculty[]
  batches   Batch[]
  createdAt DateTime @default(now())
}

enum CourseType {
  THEORY
  LAB
}

model Course {
  id           Int        @id @default(autoincrement())
  name         String
  code         String     @unique
  type         CourseType
  departmentId Int
  department   Department @relation(fields: [departmentId], references: [id])
  createdAt    DateTime   @default(now())
}

model Faculty {
  id           Int        @id @default(autoincrement())
  name         String
  email        String     @unique
  maxLoad      Int
  departmentId Int
  department   Department @relation(fields: [departmentId], references: [id])
  createdAt    DateTime   @default(now())
}

model Batch {
  id           Int        @id @default(autoincrement())
  semester     Int
  size         Int
  departmentId Int
  department   Department @relation(fields: [departmentId], references: [id])
  createdAt    DateTime   @default(now())
}
